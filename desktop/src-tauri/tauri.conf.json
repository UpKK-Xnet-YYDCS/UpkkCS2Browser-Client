{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Upkk Server Browser",
  "mainBinaryName": "upkk-server-browser",
  "version": "1.7.0",
  "identifier": "com.upkk.server-browser",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Upkk Server Browser - 游戏服务器浏览器",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://* https://*; img-src 'self' data: http://* https://*; style-src 'self' 'unsafe-inline'; frame-src http://* https://*"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "dmg", "appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": "((mailto:\\w+)|(tel:\\w+)|(https?://\\w+)|(steam(china)?://\\w+)).+"
    }
  }
}
